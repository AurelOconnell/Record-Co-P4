{% extends 'base.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
<h1 class="text-white">Artist</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Nom</th>
            <td>{{ artist.name }}</td>
        </tr>
        <tr>
            <th>Ville d'origine</th>
            <td>{{ artist.city }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ artist.description }}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-info m-2 shadow-lg text-white" href="{{ path('app_record_new', { 'id': artist.id }) }}">Ajouter album</a>

{% if artist.album is not empty %}
    <h2 class="text-white">Albums</h2>
    <ul>
        {% for album in artist.album %}
            <li class="text-white">
                {% if album.recordCover %}
                    <img src="{{ asset('path/to/album/covers/' ~ album.recordCover) }}" alt="Album Cover">
                {% else %}
                    <span >Pas de pochette disponible</span>
                {% endif %}
                <br>
                {{ album.title }}
            </li>
        {% endfor %}
    </ul>
{% else %}
    <p class="text-white">Aucun album trouv√© pour cet artiste.</p>
{% endif %}

{{ include('artist/_delete_form.html.twig') }}
{% endblock %}